<div class="bg-light">
    <div class="container py-4">
        <div class="row">
            <!-- Left: Address -->
            <div class="col-lg-8">
                <!-- Cart Products Section -->
                <div class="cart-products-section bg-white shadow-sm p-3 mb-4">
                    <h5 class="mb-3">Cart Products</h5>
                    <div class="table-responsive">
                        <table class="table cart-products-table align-middle">
                            <thead>
                                <tr>
                                    <th class="text-start">Product Name</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody id="cart_body">
                                <!-- Sample Row Example -->
                                <tr>
                                    <td class="text-start">Tommy T-Shirt</td>
                                    <td class="text-center">2</td>
                                    <td class="text-end">₹1,998</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Nike Shoes</td>
                                    <td class="text-center">1</td>
                                    <td class="text-end">₹4,999</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <h5 class="mb-3">Your Delivery Address</h5>
                <div class="address-box bg-white shadow-sm p-3 mb-3">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <h6 class="mb-1 buyername">
                                Pranav Gami
                                <span class="home-badge">HOME</span>
                            </h6>
                            <p class="mb-1 address">
                                Bharti aashram, near railway station, Sarkhej, Ahmedabad, Gujarat - 382210
                            </p>
                            <p class="mb-1 phone">Mobile: <strong>7984355477</strong></p>
                            <p class="text-danger mb-3">• Pay on Delivery not available</p>
                        </div>
                        <div class="text-end">
                            <button class="btn btn-outline-danger btn-sm me-2 px-4 edit_button">Edit</button>
                        </div>
                    </div>
                    <!-- Hidden edit form -->
                    <form class="edit-form mt-3" style="display: none;">
                        <div class="mb-2">
                            <label class="form-label">Locality / Town <span class="text-danger">*</span></label>
                            <input type="text" class="form-control address-input" required
                                placeholder="e.g.  C-705,PNTC">
                        </div>
                        <div class="mb-2 row">
                            <div class="col-md-4 mb-2 mb-md-0">
                                <label class="form-label">City <span class="text-danger">*</span></label>
                                <input type="text" class="form-control address-input" required
                                    placeholder="e.g. Vejalpur">
                            </div>
                            <div class="col-md-4 mb-2 mb-md-0">
                                <label class="form-label">District <span class="text-danger">*</span></label>
                                <input type="text" class="form-control address-input" required
                                    placeholder="e.g. Ahemdabad">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Pincode <span class="text-danger">*</span></label>
                                <input type="text" class="form-control address-input" required pattern="\d{6}"
                                    maxlength="6" placeholder="e.g. 382219">
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="button" class="cancel_btn">Cancel</button>
                            <button type="submit" class="submit_btn">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Right: Order Summary -->
            <div class="col-lg-4" style="justify-self: center;">
                <div class="cart-summary-container bg-white shadow-sm">
                    <h5 class="summary_title">Order Details</h5>
                    <hr />
                    <div class="price-details">
                        <h5 class="summary_title qty" style="font-size: 1.1rem;">PRICE DETAILS(1:)</h5>
                        <div class="price-row">
                            <span>Total MRP</span>
                            <span class="summary_total">₹00.00</span>
                        </div>
                        <div class="price-row">
                            <span>Discount on MRP</span>
                            <span class="discount summary_discount">- ₹00.00</span>
                        </div>
                        <div class="price-row">
                            <span>Platform Fee</span>
                            <span class="summary_pt-fee">₹20.00</span>
                        </div>
                        <div class="price-row">
                            <span>Delivery Fee</span>
                            <span class="free-text">FREE</span>
                        </div>
                        <small class="free-shipping-note">Free shipping for you</small>
                    </div>
                    <hr />
                    <div class="total-amount">
                        <span>Total Amount</span>
                        <span class="final_total">₹00.00</span>
                    </div>
                    <div class="mt-3">
                        <button class="continue-btn">
                            CONTINUE
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Payment Method Modal-->
<div class="modal fade" id="paymentMethodModal" tabindex="-1" aria-labelledby="paymentMethodModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered custom-modal-dialog">
        <div class="modal-content shadow-sm">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold" id="paymentMethodModalLabel">Choose Payment Mode</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column flex-md-row gap-3 mt-2">
                <div class="list-group payment-tab-list w-100 w-md-40" id="paymentTab" role="tablist">
                    <button class="list-group-item list-group-item-action active" id="cod-tab" data-bs-toggle="list"
                        data-bs-target="#cod" role="tab">
                        Cash On Delivery
                    </button>
                    <button class="list-group-item list-group-item-action" id="card-tab" data-bs-toggle="list"
                        data-bs-target="#card" role="tab">
                        Credit/Debit Card
                    </button>
                </div>
                <div class="tab-content w-100" id="paymentTabContent">
                    <div class="tab-pane fade show active" id="cod" role="tabpanel" aria-labelledby="cod-tab">
                        <h6 class="fw-semibold mb-3">Cash On Delivery</h6>
                        <p class="text-muted">Pay with cash when your order is delivered. No advance payment required.
                        </p>
                        <button class="w-100 mt-3 pay-btn" data-method="COD">Pay with Cash on
                            Delivery</button>
                    </div>
                    <div class="tab-pane fade" id="card" role="tabpanel" aria-labelledby="card-tab">
                        <h6 class="fw-semibold mb-3">Credit / Debit Card</h6>
                        <p class="text-muted">Pay securely Using /Credit or Debit Cards to Connfirm Your Order</p>
                        <button type="submit" class="w-100 mt-2 pay-btn btn btn-dark" data-method="CARD">Pay using
                            Card</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>