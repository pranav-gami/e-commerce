<div class="dashboard">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Account</h2>
            <p>Pranav Gami</p>
        </div>
        <nav class="sidebar-nav">
            <a href="#" data-page="overview" class="active">Overview</a>
            <a href="#" data-page="orders">Orders</a>
            <a href="#" data-page="cart">My Cart</a>
            <a href="#" data-page="profile">Edit Profile</a>
        </nav>
    </aside>
    <main class="main-content">
        <header class="main-header">
            <button class="menu-toggle">&#9776;</button>
            <h1 id="page-title">Overview</h1>
        </header>

        <section id="content">
            <p>Welcome to your dashboard! Select an option from the sidebar.</p>
        </section>
    </main>
</div>
<script>
    const links = document.querySelectorAll('.sidebar-nav a');
    const content = document.getElementById('content');
    const title = document.getElementById('page-title');

    const pages = {
        overview: "<p>Welcome to your dashboard! Select an option from the sidebar.</p>",
        orders: "<h2>Your Orders</h2><p>View all your recent orders here.</p>",
        cart: "<h2>My Cart</h2><p>View items youâ€™ve added to your cart.</p>",
        profile: "<h2>Edit Profile</h2><p>Update your personal details here.</p>"
    };

    links.forEach(link => {
        link.addEventListener('click', e => {
            e.preventDefault();
            links.forEach(l => l.classList.remove('active'));
            link.classList.add('active');

            const page = link.dataset.page;
            content.innerHTML = pages[page];
            title.textContent = link.textContent;
        });
    });
    const toggleBtn = document.querySelector('.menu-toggle');
    const sidebar = document.querySelector('.sidebar');
    toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('open');
    });
</script>