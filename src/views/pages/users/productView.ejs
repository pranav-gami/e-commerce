<div class="container mt-5 product__view" data-productid="<%= productId %>">
    <div class="row justify-content-center align-items-center g-4">
        <!-- Product Image -->
        <div class="col-12 col-md-6 d-flex justify-content-center">
            <div class="product-img-box">
                <img src="/assets/media/products/book.jpg" alt="Product Image" class="img-fluid fixed-img" />
            </div>
        </div>
        <!-- Product Details -->
        <div
            class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center align-items-md-start text-center text-md-start">
            <h3 class="fw-bold product_title">Berrylush</h3>
            <p class="text-muted product_description">Black Flared Maxi Skirt</p>
            <div class="mb-2">
                <span class="badge bg-success rating">4.4 ★</span>
                <small class="text-muted ms-2 rating">1.5k Ratings</small>
            </div>
            <div class="price mb-2">
                <span class="final_price">₹827</span>
                <span class="old-price text-decoration-line-through text-muted ms-2 product_price">₹1799</span>
                <span class="discount text-danger ms-2 discount_percent">(54% OFF)</span>
            </div>
            <p class="text-muted mb-3">Inclusive of all taxes</p>
            <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-3 mb-4">
                <button class="btn btn-pink px-4 product__add_btn">ADD TO BAG</button>
            </div>
        </div>
    </div>
</div>