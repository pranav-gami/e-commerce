<div class="bg-light">
    <div class="container py-4">
        <div class="row">
            <!-- Left: Address -->
            <div class="col-lg-8">
                <!-- Cart Products Section -->
                <div class="cart-products-section bg-white shadow-sm p-3 mb-4">
                    <h5 class="mb-3">Cart Products</h5>
                    <div class="table-responsive">
                        <table class="table cart-products-table align-middle">
                            <thead>
                                <tr>
                                    <th class="text-start">Product Name</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody id="cart_body">
                                <!-- Sample Row Example -->
                                <tr>
                                    <td class="text-start">Tommy T-Shirt</td>
                                    <td class="text-center">2</td>
                                    <td class="text-end">₹1,998</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Nike Shoes</td>
                                    <td class="text-center">1</td>
                                    <td class="text-end">₹4,999</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <h5 class="mb-3">Your Delivery Address</h5>
                <div class="address-box bg-white shadow-sm p-3 mb-3">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <h6 class="mb-1 buyername">
                                Pranav Gami
                                <span class="home-badge">HOME</span>
                            </h6>
                            <p class="mb-1 address">
                                Bharti aashram, near railway station, Sarkhej, Ahmedabad, Gujarat - 382210
                            </p>
                            <p class="mb-1 phone">Mobile: <strong>7984355477</strong></p>
                            <p class="text-danger mb-3">• Pay on Delivery not available</p>
                        </div>
                        <div class="text-end">
                            <button class="btn btn-outline-danger btn-sm me-2 px-4 edit_button">Edit</button>
                        </div>
                    </div>
                    <!-- Hidden edit form -->
                    <form class="edit-form mt-3" style="display: none;">
                        <div class="mb-2">
                            <label class="form-label">Address</label>
                            <textarea class="form-control address-input" rows="2"
                                required>Bharti aashram, near railway station, Sarkhej, Ahmedabad, Gujarat - 382210</textarea>
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-secondary btn-sm me-2 cancel_button">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-sm">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Right: Order Summary -->
            <div class="col-lg-4">
                <div class="cart-summary-container bg-white shadow-sm">
                    <h5 class="summary_title">Order Details</h5>
                    <hr />
                    <div class="price-details">
                        <h5 class="summary_title qty" style="font-size: 1.1rem;">PRICE DETAILS(1:)</h5>
                        <div class="price-row">
                            <span>Total MRP</span>
                            <span class="summary_total">₹00.00</span>
                        </div>
                        <div class="price-row">
                            <span>Discount on MRP</span>
                            <span class="discount summary_discount">- ₹00.00</span>
                        </div>
                        <div class="price-row">
                            <span>Platform Fee</span>
                            <span class="summary_pt-fee">₹20.00</span>
                        </div>
                        <div class="price-row">
                            <span>Delivery Fee</span>
                            <span class="free-text">FREE</span>
                        </div>
                        <small class="free-shipping-note">Free shipping for you</small>
                    </div>
                    <hr />
                    <div class="total-amount">
                        <span>Total Amount</span>
                        <span class="final_total">₹00.00</span>
                    </div>
                    <div class="mt-3">
                        <button class="continue-btn
                        ">CONTINUE</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>