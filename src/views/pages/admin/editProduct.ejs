<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                Edit Product
            </h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">
                    <a href="/admin/products" class="text-muted text-hover-primary">Manage Products</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Edit Product</li>
            </ul>
        </div>
    </div>
</div>
<!--end::Toolbar-->

<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid" data-product-id=<%=productId %>>
    <div id="kt_app_content_container" class="app-container container-xxl">
        <!--begin::Form-->
        <form id="edit_product_form" class="form d-flex flex-column flex-lg-row" enctype="multipart/form-data">
            <input type="hidden" id="edit_product_id" name="product_id" />

            <!--begin::Aside column-->
            <div class="d-flex flex-column gap-7 gap-lg-10 w-100 w-lg-300px mb-7 me-lg-10">
                <!--begin::Thumbnail-->
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Upload Image</h2>
                        </div>
                    </div>
                    <div class="card-body text-center pt-0">
                        <div class="image-input image-input-outline image-input-placeholder mb-3"
                            data-kt-image-input="true">
                            <div class="image-input-wrapper w-150px h-150px" id="edit_image_preview_wrapper"
                                style="background-size: cover; background-position: center;"></div>
                            <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow"
                                data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change image">
                                <i class="bi bi-pencil-fill fs-7"></i>
                                <input type="file" name="image" id="edit_image" accept="image/*" />
                                <input type="hidden" name="image_remove" />
                            </label>
                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow"
                                data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="Cancel image">
                                <i class="bi bi-x fs-2"></i>
                            </span>
                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow"
                                data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="Remove image">
                                <i class="bi bi-x fs-2"></i>
                            </span>
                        </div>
                        <div class="text-muted fs-7">Set the product image. Only *.jpg and *.jpeg files are accepted.
                        </div>
                    </div>
                </div>
                <!--end::Thumbnail-->

                <!--begin::Category-->
                <div class="card card-flush py-4">
                    <div class="card-header">
                        <div class="card-title">
                            <h2>Product Category</h2>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <label class="form-label">Select Category</label>
                        <select class="form-select mb-2" id="edit_subcategory" name="subcategoryId"
                            data-control="select2" data-placeholder="Select an option">
                            <option value="1" data-category-id="1">Computers</option>
                            <option value="2" data-category-id="1">Watches</option>
                            <option value="3" data-category-id="1">Headphones</option>
                            <option value="4" data-category-id="1">Footwear</option>
                            <option value="5" data-category-id="1">Cameras</option>
                            <option value="6" data-category-id="1">Shirts</option>
                        </select>
                        <div class="text-muted fs-7">Choose a category for the product.</div>
                    </div>
                </div>
                <!--end::Category-->
            </div>
            <!--end::Aside column-->

            <!--begin::Main column-->
            <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                <!--begin::Tabs-->
                <ul class="nav nav-custom nav-tabs nav-line-tabs nav-line-tabs-2x border-0 fs-4 fw-semibold mb-n2">
                    <li class="nav-item">
                        <a class="nav-link text-active-primary pb-4 active" data-bs-toggle="tab"
                            href="#kt_ecommerce_edit_product_general">Product Details</a>
                    </li>
                </ul>
                <!--end::Tabs-->

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="kt_ecommerce_edit_product_general" role="tab-panel">
                        <div class="d-flex flex-column gap-7 gap-lg-10">
                            <!--begin::Details-->
                            <div class="card card-flush py-4">
                                <div class="card-header">
                                    <div class="card-title">
                                        <h2>Edit Product Info</h2>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Product Name</label>
                                        <input type="text" name="title" id="edit_title" class="form-control mb-2"
                                            placeholder="Product name" required />
                                    </div>
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Description</label>
                                        <textarea name="description" id="edit_description" class="form-control mb-2"
                                            rows="3" placeholder="Product description" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <!--end::Details-->

                            <!--begin::Pricing-->
                            <div class="card card-flush py-4">
                                <div class="card-header">
                                    <div class="card-title">
                                        <h2>Pricing</h2>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Price</label>
                                        <input type="number" name="price" id="edit_price" class="form-control mb-2"
                                            placeholder="Product price" step="0.01" required />
                                    </div>
                                    <div class="mb-10 fv-row">
                                        <label class="required form-label">Rating</label>
                                        <input type="number" name="rating" id="edit_rating" class="form-control mb-2"
                                            placeholder="Product rating" min="1" max="5" step="0.1" required />
                                    </div>
                                </div>
                            </div>
                            <!--end::Pricing-->
                        </div>
                    </div>
                </div>

                <!--begin::Actions-->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <span class="indicator-label">Update Product</span>
                        <span class="indicator-progress">Please wait...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                    </button>
                    <a href="#" class="btn btn-light me-5">Cancel</a>
                </div>
                <!--end::Actions-->
            </div>
            <!--end::Main column-->
        </form>
        <!--end::Form-->
    </div>
</div>
<!--end::Content-->